@using BTS.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@section headCSS{
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/Assets/admin/libs/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Assets/admin/libs/bootstrap-daterangepicker/daterangepicker.css">

    <link href="~/Assets/admin/libs/leaflet/dist/leaflet.css" rel="stylesheet" />
    <link href="~/Assets/admin/libs/leaflet.markercluster/dist/MarkerCluster.css" rel="stylesheet" />
    <link href="~/Assets/admin/libs/leaflet.markercluster/dist/MarkerCluster.Default.css" rel="stylesheet" />
    <link href="~/Assets/admin/libs/pivottable/dist/pivot.min.css" rel="stylesheet" />

    <link href="~/Assets/admin/libs/datatables-buttons/css/buttons.dataTables.css" rel="stylesheet" />

    <link href="~/Assets/client/css/custom.css" rel="stylesheet" />
    <link href="~/Assets/client/css/custom-DataTable.css" rel="stylesheet" />

}

@section footerJS{
    <script src="~/Assets/admin/libs/moment/moment.js"></script>
    <script src="~/Assets/admin/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Assets/admin/libs/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/Assets/admin/libs/leaflet/dist/leaflet.js"></script>
    <script src="~/Assets/admin/libs/leaflet.markercluster/dist/leaflet.markercluster.js"></script>

    <script src="~/Assets/admin/libs/plotly.js/dist/plotly-basic.min.js"></script>
    <script src="~/Assets/admin/libs/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Assets/admin/libs/pivottable/dist/pivot.min.js"></script>
    <script src="~/Assets/admin/libs/pivottable/dist/plotly_renderers.min.js"></script>

    <script src="~/Assets/admin/libs/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/Assets/admin/libs/jszip/dist/jszip.min.js"></script>
    <script src="~/Assets/admin/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Assets/admin/libs/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.colVis.js"></script>

    @*<script src="http://malsup.github.com/jquery.form.js"></script>*@
    <script src="~/Assets/admin/libs/jquery-form/dist/jquery.form.min.js"></script>
    <script src="~/Assets/client/js/controllers/checkController.js"></script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->

    <section class="content">
        <div class="row col-md-12">
            <!-- SELECT2 EXAMPLE -->
            <div class="box box-default col-md-8">
                <div class="box-header with-border">
                    <h3 class="BTS-title">KIỂM TRA HỒ SƠ KIỂM ĐỊNH TRẠM GỐC BTS</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="clearfix"></div>
                    <div class="row">
                        @using (Html.BeginForm("CheckBTS", "Check", FormMethod.Post, new { enctype = "multipart/form-data", id = "jqueryForm", @class = "form-horizontal form-label-left" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-6 col-sm-6 col-xs-12" for="SampleFile">
                                        Mẫu file dữ liệu nhập<span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <a href="~/Sample File/Check BTS Sample.xls">File mẫu BTS cần kiểm tra</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="BtsCodeOrAddress">
                                        Chọn tập tin cần kiểm tra <span class="required"></span>
                                    </label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        @*<input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" name="file" class="form-control col-md-7 col-xs-12" required="required">*@
                                        @*<input id="FileDialog" type="file" accept=".xlsx, .xls" name="file" class="form-control col-md-7 col-xs-12" required="required">*@
                                        <input id="FileDialog" type="file" accept=".xls" name="file" class="form-control col-md-7 col-xs-12" required="required">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div id="progressRow" hidden class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="progressBarStatus">
                                        Tiến độ thực hiện<span class="required"></span>
                                    </label>

                                    <div class="progress col-md-9 col-sm-9 col-xs-12">
                                        <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                                    </div>
                                    <div id="status"></div>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset" id="btnReset">Bỏ chọn</button>
                                        <input class="btn btn-success" type="submit" id="btnCheck" value="Kiểm tra" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.row -->

        <ul class="nav nav-tabs nav-pills">
            <li class="active"><a data-toggle="tab" href="#homeTab">Danh sách GCNKĐ</a></li>
            @if (User.IsInRole(CommonConstants.Data_CanViewDetail_Role))
            {
                <li><a data-toggle="tab" href="#mapTab">Xem trên Bản đồ</a></li>
            }

            @if (User.IsInRole(CommonConstants.Data_CanViewChart_Role))
            {
                <li><a data-toggle="tab" href="#pivotTableTab">Số liệu thống kê</a></li>
            }
        </ul>
        <div class="tab-content">
            <div id="homeTab" class="tab-pane fade in active">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="BTS-title">DANH SÁCH TRẠM BTS ĐƯỢC KIỂM TRA</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="MyDataTable" class="table table-bordered table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Nhà mạng</th>
                                            <th>Mã trạm</th>
                                            <th>Địa chỉ</th>
                                            <th>Giấy CNKĐ đã cấp</th>
                                            <th>Giấy CNKĐ cấp kèm</th>
                                            <th>HS đang xử lý</th>
                                            <th>Không cấp giấy CNKĐ</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <div id="mapTab" class="tab-pane fade">
                <h3 class="BTS-title">DANH SÁCH CÁC TRẠM BTS TRA CỨU</h3>
                <div id="mapBTS" style="width: 100%; height: 500px;"></div>
            </div>
            <div id="pivotTableTab" class="tab-pane fade">
                <h3 class="BTS-title">THỐNG KÊ SỐ LƯỢNG TRẠM GỐC BTS ĐANG TRA CỨU</h3>
                <div id="pivotTable" style="width: 100%"></div>
            </div>
            <!-- /.row -->
        </div>
    </section>
</div>