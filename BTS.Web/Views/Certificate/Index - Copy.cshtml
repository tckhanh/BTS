    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@section footerJS{
    @*<script src="~/Assets/client/map/markers.js"></script>*@
    <script src="~/Assets/client/map/leaf-demo.js"></script>
    var Cerfiticates = (List<Certificate>
        )ViewBag.Certificates;
