@model IEnumerable<BTS.Web.Models.ApplicationUserViewModel>
@using BTS.Common
@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-condensed MyDataTable" id="MyDataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locked)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr data-id=@item.Id>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="dt-body-center">
                    @if (item.Locked)
                    {
                        <div data-toggle="tooltip" data-placement="top" title="Mở khóa"><i class="fa fa-lock fa-lg"></i> </div>
                    }
                    else
                    {
                        <div data-toggle="tooltip" data-placement="top" title="Khóa"><i class="fa fa-unlock fa-lg"></i></div>
                    }
                </td>
                <td class="dt-body-center">
                    <a class="btn btn-info btn-sm" onclick="commonController.Detail('@Url.Action("Detail", "ApplicationUserProfile", new { id = @item.Id })')" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-address-card fa-lg"></i></a>
                    @if (User.IsInRole(CommonConstants.Data_CanEdit_Role))
                    {
                        <a class="btn btn-success btn-sm" onclick="commonController.Edit('@Url.Action("Edit", "ApplicationUserProfile", new { id = @item.Id })')" data-toggle="tooltip" data-placement="top" title="Sửa đổi"><i class="fa fa-pencil fa-lg"></i></a>
                    }
                    @if (User.IsInRole(CommonConstants.System_CanReset_Role))
                    {
                        <a class="btn btn-warning btn-sm" onclick="commonController.Reset('@Url.Action("Reset", "ApplicationUserProfile", new { id = @item.Id })')" data-toggle="tooltip" data-placement="top" title="Đặt lại mật khẩu"><i class="fa fa-gear fa-lg"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>