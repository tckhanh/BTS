@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
    IEnumerable<BTS.Web.Models.CityViewModel> cities = ViewBag.cities;
}

@section headCSS{
    <link href="~/Assets/admin/libs/datatables-buttons/css/buttons.dataTables.css" rel="stylesheet" />
    <link href="~/Assets/client/css/custom.css" rel="stylesheet" />
}

@section footerJS{
    <script src="~/Assets/admin/libs/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/Assets/admin/libs/jszip/dist/jszip.min.js"></script>
    <script src="~/Assets/admin/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Assets/admin/libs/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/Assets/admin/libs/datatables-buttons/js/buttons.colVis.js"></script>
    <script src="~/Assets/client/js/controllers/operator.js"></script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#OperatorDataTable").DataTable({
                "ajax": {
                    "url": "/Operator/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ID" },
                    { "data": "Name" },
                    {
                        "data": "ID", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit","Operator")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                }
            });
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="BTS-title">DANH SÁCH NHÀ MẠNG</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <table id="OperatorDataTable" class="table table-bordered table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Mã Doanh nghiệp</th>
                                    <th>Tên Doanh nghiệp</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</div>