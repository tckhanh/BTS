    <!-- Main content -->

    <section class="content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 ">
                <!-- SELECT2 EXAMPLE -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="BTS-title">BÁO CÁO KẾT QUẢ CẤP GIẤY CHỨNG NHẬN KIỂM ĐỊNH TRONG THÁNG</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="clearfix"></div>
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            @Html.AntiForgeryToken()

                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="DateRange">
                                        Tháng báo cáo<span class="required"></span>
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input class="form-control" type="text" id="DateRange" value="" style="width:100%" />
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button class="btn btn-primary" type="reset">Bỏ lọc</button>
                                        <input class="btn btn-success" type="button" id="btnSearch" value="Thực hiện" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>

        <ul class="nav nav-tabs nav-pills">
            <li class="active"><a data-toggle="tab" href="#homeTab">GCNKĐ_ISO</a></li>
            <li><a data-toggle="tab" href="#home2Tab">GCNKĐ_TT18</a></li>
            @if (User.IsInRole(CommonConstants.Data_CanViewDetail_Role))
            {
                <li><a data-toggle="tab" href="#mapTab">Xem trên Bản đồ</a></li>
            }

            @if (User.IsInRole(CommonConstants.Data_CanViewChart_Role))
            {
                <li><a data-toggle="tab" href="#pivotTableTab">Số liệu thống kê</a></li>
            }
        </ul>
        <div class="tab-content">
            <div id="homeTab" class="tab-pane fade in active">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="BTS-title">
                                    DANH SÁCH TRẠM GỐC ĐIỆN THOẠI DI ĐỘNG MẶT ĐẤT CÔNG CỘNG ĐƯỢC CẤP GIẤY CHỨNG NHẬN KIỂM ĐỊNH TRONG THÁNG
                                    <span id="BTS-Result" class="BTS-title"></span>
                                </h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">

                                <table id="MyDataTable" class="table table-bordered table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">Stt</th>
                                            <th rowspan="2">Số Giấy CNKĐ</th>
                                            <th rowspan="2">Đơn vị CCDV</th>
                                            <th colspan="5">Đơn vị dùng chung cơ sở hạ tầng</th>
                                            <th rowspan="2">Mã trạm</th>
                                            <th colspan="2">Địa điểm lắp đặt</th>
                                            <th rowspan="2">Ngày cấp</th>
                                            <th rowspan="2">Có giá trị đến</th>
                                        </tr>
                                        <tr>
                                            <th>Gtel</th>
                                            <th>HN Tel</th>
                                            <th>Viettel</th>
                                            <th>VMS</th>
                                            <th>VNP</th>
                                            <th>Địa chỉ</th>
                                            <th>Tỉnh/TP</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <div id="home2Tab" class="tab-pane fade">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="BTS-title">
                                    DANH SÁCH TRẠM GỐC ĐIỆN THOẠI DI ĐỘNG MẶT ĐẤT CÔNG CỘNG ĐƯỢC CẤP GIẤY CHỨNG NHẬN KIỂM ĐỊNH TRONG THÁNG
                                    <span id="BTS-Result" class="BTS-title"></span>
                                </h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">

                                <table id="MyDataTable2" class="table table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Stt</th>
                                            <th>Địa điểm lắp đặt</th>
                                            <th>Tỉnh/TP</th>
                                            <th>Tọa độ</th>
                                            <th>Doanh nghiệp</th>
                                            <th>Số lượng trạm</th>
                                            <th>Mã trạm</th>
                                            <th>Thiết bị phát</th>
                                            <th>Số Anten</th>
                                            <th>Số máy phát</th>
                                            <th>Tổng công suất</th>
                                            <th>Băng tần</th>
                                            <th>Độ cao Anten</th>
                                            <th>Số Giấy CNKĐ</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>

            <div id="mapTab" class="tab-pane fade">
                <h3 class="BTS-title">DANH SÁCH CÁC TRẠM BTS ĐÃ ĐƯỢC CẤP GIẤY CHỨNG NHẬN KIỂM ĐỊNH</h3>
                <div id="mapBTS" style="width: 100%; height: 500px;"></div>
            </div>
            <div id="pivotTableTab" class="tab-pane fade">
                <h3 class="BTS-title">THỐNG KÊ SỐ LƯỢNG TRẠM GỐC BTS ĐƯỢC CẤP GIẤY CHỨNG NHẬN KIỂM ĐỊNH</h3>
                <div id="pivotTable" style="width: 100%"></div>
            </div>
            <!-- /.row -->
        </div>
    </section>
</div>